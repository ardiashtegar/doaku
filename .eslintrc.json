{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["dist/", "build/", "bundle.js"],
  "rules": {
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "import/no-unresolved": ["error", { "ignore": ["^assets/"] }],
    "max-len": ["error", { "code": 125 }],
    "import/no-extraneous-dependencies": "off"
  }
}

